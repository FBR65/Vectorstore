# KnowledgeBase Vector Database Environment Variables
# Copy this file to .env.local and customize as needed

# Server Configuration
KB_SERVER_HOST=0.0.0.0
KB_SERVER_PORT=8000
KB_SERVER_RELOAD=false

# Database Configuration
KB_PERSIST_DIR=./data/knowledge_base
KB_EMBEDDING_DIM=1024
KB_USE_GPU=false
KB_INDEX_TYPE=flat

# Performance Configuration
KB_MAX_WORKERS=4
KB_BATCH_SIZE=10
KB_CACHE_TTL=300
KB_MAX_RESULTS=10
KB_SIMILARITY_THRESHOLD=0.1
KB_MAX_CONTEXT_LENGTH=4000

# MCP Configuration
KB_MCP_ENABLED=true
KB_MCP_HOST=localhost
KB_MCP_PORT=8001
KB_MCP_SERVER_NAME=knowledgebase
KB_MCP_SERVER_VERSION=0.2.0

# Logging Configuration
KB_LOG_LEVEL=INFO
KB_LOG_FILE=logs/knowledgebase.log

# Backup Configuration
KB_BACKUP_ENABLED=true
KB_BACKUP_DIR=./data/knowledge_base/backups
KB_BACKUP_INTERVAL=24
KB_BACKUP_MAX=30

# Development/Production Mode
KB_ENVIRONMENT=development
KB_DEBUG=true
KB_SHOW_ERROR=true
KB_SHARE=false
KB_AUTO_RELOAD=true

# Optional: External Services
KB_OLLAMA_URL=http://localhost:11434
KB_OLLAMA_MODEL=qwen2.5
KB_BGE_MODEL=bge-m3

# Embedding Configuration
KB_EMBEDDING_METHOD=ollama  # Options: ollama, sentence-transformer
KB_SENTENCE_TRANSFORMER_MODEL=paraphrase-multilingual-MiniLM-L12-v2
KB_EMBEDDING_DIM=384  # Default for sentence-transformer, override if needed

# Optional: Redis for caching (if available)
KB_REDIS_URL=redis://localhost:6379
KB_REDBIS_DB=0

# Optional: Monitoring
KB_METRICS_ENABLED=false
KB_METRICS_PORT=9090